// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Main User model
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String    // Hashed password for email/password auth
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // Onboarding Data
  onboardingComplete Boolean  @default(false)
  targetRole         String   @default("Full Stack Developer")
  timeframe          String   @default("6_months") // "3_months" | "6_months"
  targetCompany      String   @default("Mixed") // "FAANG" | "Startups" | "Service_Based" | "Mixed"
  startDate          DateTime @default(now())
  targetDate         DateTime?
  hoursPerDay        Int      @default(4)
  currentSkillLevel  String   @default("beginner") // "beginner" | "intermediate" | "advanced"

  // Gamification Stats
  currentLevel      Int      @default(1)
  totalXP           Int      @default(0)
  currentStreak     Int      @default(0)
  longestStreak     Int      @default(0)
  lastActiveDate    DateTime?
  totalFocusMinutes Int      @default(0)
  weeklyGoalStreak  Int      @default(0)

  // Relations to user data
  taskProgress      TaskProgress[]
  dailyQuests       DailyQuest[]
  studyDays         StudyDay[]
  pomodoroSessions  PomodoroSession[]
  notes             Note[]
  weeklyGoals       WeeklyGoal[]
  badges            UserBadge[]
  interviewProgress InterviewProgress[]
}

// Completed roadmap topics
model TaskProgress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  topicId     String   // ID from static roadmap data
  completedAt DateTime @default(now())
  xpEarned    Int      @default(0)

  @@unique([userId, topicId])
  @@index([userId])
}

// Daily quests/tasks
model DailyQuest {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  category  String   // 'coding' | 'building' | 'learning'
  completed Boolean  @default(false)
  xp        Int      @default(50)
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

// Daily study tracking
model StudyDay {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date           DateTime
  hoursStudied   Float    @default(0)
  tasksCompleted Int      @default(0)
  xpEarned       Int      @default(0)

  @@unique([userId, date])
  @@index([userId])
}

// Pomodoro timer sessions
model PomodoroSession {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  startTime DateTime @default(now())
  duration  Int      // in minutes
  completed Boolean  @default(false)
  xpEarned  Int      @default(0)

  @@index([userId])
}

// User notes
model Note {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  content   String
  category  String   // 'dsa' | 'system-design' | 'behavioral' | 'development' | 'general'
  topicId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, category])
}

// Weekly goals tracking
model WeeklyGoal {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  weekStart         DateTime
  problemsTarget    Int      @default(20)
  problemsCompleted Int      @default(0)
  hoursTarget       Int      @default(20)
  hoursCompleted    Float    @default(0)
  topicsTarget      Int      @default(5)
  topicsCompleted   Int      @default(0)
  achieved          Boolean  @default(false)

  @@unique([userId, weekStart])
  @@index([userId])
}

// Unlocked badges
model UserBadge {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badgeId    String   // References ALL_BADGES array in code
  unlockedAt DateTime @default(now())

  @@unique([userId, badgeId])
  @@index([userId])
}

// Interview question practice tracking
model InterviewProgress {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionId      String
  practiced       Boolean  @default(true)
  lastPracticedAt DateTime @default(now())

  @@unique([userId, questionId])
  @@index([userId])
}
